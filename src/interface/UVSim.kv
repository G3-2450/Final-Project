    # BoxLayout (Right pane)
        # BoxLayout ( registers and memory)
        # BoxLayout ( console )
    

<UVSimWindow>:
    BoxLayout:
        orientation: 'horizontal' # Two panes side-by-side
        spacing: dp(10) # Space between panes
        padding: dp(10) # Padding around window content

        # LEFT PANE
        BoxLayout:
            size_hint_x: 0.3
            orientation: 'vertical'
            LeftPaneWidget:
                id: left_panel
        
        # RIGHT PANE
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.7
            spacing: dp(10) # Space between Console and Reg/Mem sections
            
            # REGISTERS AND MEMORY
            MemRegWidget:
                id: mem_reg_display
                size_hint_x: 0.5

            # CONSOLE SECTION
            ConsoleWidget:
                id: uvsim_console
                size_hint_x: 0.5