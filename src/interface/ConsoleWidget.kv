

<ConsoleWidget>
    orientation: 'vertical'
    spacing: dp(12)

    Label:
        canvas.before:
            Color:
                rgba: .6509, .6509, .6509, 1 # Label color
            Rectangle:
                pos: self.pos
                size: self.size
        text: 'Console'
        font_size: '18sp'
        color: 1, 1, 1, 1 # white text
        size_hint_y: None
        height: self.texture_size[1] + dp(20)

    Button:
        text: 'Button 1'
        size_hint: 1, 1
        background_color: 0, 0, 0, 1